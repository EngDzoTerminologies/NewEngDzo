<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddc.dict.FeedbackActivity"
   android:scrollbarStyle="outsideOverlay">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="བསམ་འཆར། / Feedback"
        android:textSize="20sp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    </android.support.design.widget.AppBarLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="36dp">
        <TextView
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To:"
            android:layout_marginTop="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <EditText
            android:id="@+id/edit_text_to"
            android:layout_below="@id/to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_border"
            android:inputType="textEmailAddress"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textSize="16sp"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            android:text="ict@dzongkha.gov.bt"/>

        <TextView
            android:id="@+id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject:"
            android:fontFamily="@font/raleway"
            android:layout_below="@id/edit_text_to"
            android:layout_marginTop="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:ignore="NotSibling" />

        <EditText
            android:id="@+id/edit_text_subject"
            android:layout_below="@id/subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_border"
            android:inputType="textEmailSubject"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textSize="16sp"
            android:focusableInTouchMode="false"
            android:padding="10dp"
            android:text="Feedback on Eng Dzo App"
            />

        <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Message:"
            android:layout_below="@id/edit_text_subject"
            android:layout_marginTop="25dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

        <EditText
            android:id="@+id/edit_text_message"
            android:layout_below="@id/message"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:lines="10"
            android:textSize="16sp"
            android:padding="10dp"
            android:background="@drawable/edit_border"
            android:gravity="start|top"
            />
        <Button
            android:id="@+id/button_send"
            android:layout_marginTop="25dp"
            android:layout_below="@id/edit_text_message"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/button_border"
            android:text="send"
            android:textColor="#ffffff"
            />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>