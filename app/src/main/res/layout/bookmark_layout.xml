<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?selectableItemBackground"
    android:layout_margin="5dp"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/dzog_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Dzongkha word"
                android:fontFamily="@font/ddc_uchen"/>

            <TextView
                android:id="@+id/eng_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="English Word"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/raleway"
                android:layout_below="@id/dzog_word"
                />

            <ImageButton
                android:id="@+id/deleteID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/dzog_word"
                app:srcCompat="@drawable/ic_delete"
                android:layout_alignParentEnd="true"
                android:background="@color/white"/>
            <TextView
                android:id="@+id/categoryID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="1sp"
                android:textStyle="bold"
                android:text="category"
                android:visibility="invisible"
                android:layout_below="@id/eng_word"
                />
        </RelativeLayout>




    </LinearLayout>


</android.support.v7.widget.CardView>